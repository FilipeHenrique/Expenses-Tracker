generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
    id String @id @default(uuid())
    name String
    googleId Int @unique
    avatarUrl String
    transactions Transaction[]
}

model Transaction {
    id String @id @default(uuid())
    amount Float
    type String
    category String
    paymentMethod String
    date DateTime
    description String @db.VarChar(50)

    user User @relation(fields: [userId], references: [id])
    userId String

